generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  images      Json     // { imageFront?: string, imageBack?: string }
  category    String   // "women" | "men" | "junior"
  type        String
  price       Int      
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

